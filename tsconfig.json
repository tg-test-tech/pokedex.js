{
  "include": [
    "src/**/*",
    "test/**/*",
    "server.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "strictNullChecks": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "types": [
      "mocha",
      "chai",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}